{
    "name": "unclecatvn/laravel-glide",
    "description": "Auto-magically generate responsive images from static image files.",
    "keywords": [
        "unclecatvn",
        "laravel",
        "laravel-glide"
    ],
    "homepage": "https://github.com/unclecatvn/laravel-glide",
    "license": "MIT",
    "authors": [
        {
            "name": "Hoai Nam",
            "email": "nguyenhoain123@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0|^11.0",
        "illuminate/http": "^10.29|^11.0",
        "illuminate/support": "^10.29|^11.0",
        "laravel/framework": "^10.29|^11.0",
        "league/glide-symfony": "^2.0",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8|^8.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Unclecatvn\\Laravel\\Glide\\": "src/"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Unclecatvn\\Laravel\\Glide\\GlideServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
